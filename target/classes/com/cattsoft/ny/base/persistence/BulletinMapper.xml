		</if>
		<if test="sts != null">
    	<![CDATA[ STS = #{sts}, ]]>
		</if>
		<if test="stsTime != null">
    	<![CDATA[ STS_TIME = #{stsTime}, ]]>
		</if>
		<if test="createTime != null">
    	<![CDATA[ CREATE_TIME = #{createTime}, ]]>
		</if>
		</set>
	    <![CDATA[
	        WHERE BULLETIN_ID = #{bulletinId}
	    ]]>
	</update>

