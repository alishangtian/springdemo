	    </if>
	    <if test="keyword != null" >
			#{keyword},
	    </if>
	    <if test="sts != null" >
			#{sts},
	    </if>
	    <if test="stsTime != null" >
			#{stsTime},
	    </if>
	    <if test="createTime != null" >
			#{createTime},
	    </if>
	  </trim>
	</insert>

	<!-- 删除记录 -->
	<delete id="delete" parameterType="long">
		<![CDATA[
			DELETE FROM bulletin
