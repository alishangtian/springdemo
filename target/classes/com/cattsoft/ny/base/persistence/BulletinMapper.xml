	<insert id="insert" parameterType="com.cattsoft.ny.base.entity.Bulletin">
		<selectKey keyProperty="bulletinId" resultType="String" order="BEFORE">
			SELECT SYS_GUID() FROM DUAL
		</selectKey>
		<![CDATA[
			INSERT INTO bulletin
		]]>
		<trim prefix="(" suffix=")" suffixOverrides="," >
			BULLETIN_ID,
	    <if test="userId != null" >
			USER_ID,
	    </if>
	    <if test="bulletinTitle != null" >
			BULLETIN_TITLE,
	    </if>
	    <if test="bulletinContent != null" >
			BULLETIN_CONTENT,
	    </if>
	    <if test="publishTime != null" >
			PUBLISH_TIME,
	    </if>
	    <if test="revokeTime != null" >
			REVOKE_TIME,
	    </if>
	    <if test="priority != null" >
			PRIORITY,
	    </if>
	    <if test="keyword != null" >
			KEYWORD,
	    </if>
	    <if test="sts != null" >
			STS,
	    </if>
	    <if test="stsTime != null" >
			STS_TIME,
	    </if>
	    <if test="createTime != null" >
			CREATE_TIME,
	    </if>
	  </trim>
	  <trim prefix="values (" suffix=")" suffixOverrides="," >
	  	#{bulletinId},
	    <if test="userId != null" >
			#{userId},
	    </if>
	    <if test="bulletinTitle != null" >
			#{bulletinTitle},
	    </if>
	    <if test="bulletinContent != null" >
			#{bulletinContent},
	    </if>
	    <if test="publishTime != null" >
			#{publishTime},
	    </if>
	    <if test="revokeTime != null" >
