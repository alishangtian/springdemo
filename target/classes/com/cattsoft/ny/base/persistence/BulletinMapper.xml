	<select id="select" parameterType="long" resultMap="bulletinList">
		<include refid="sqlSelectAll" />
		<![CDATA[
			WHERE BULLETIN_ID = #{bulletinId}
		]]>
	</select>

	<!-- 条件查询所有记录 -->
	<select id="selectList" parameterType="com.cattsoft.ny.base.entity.querybean.BulletinQB"
